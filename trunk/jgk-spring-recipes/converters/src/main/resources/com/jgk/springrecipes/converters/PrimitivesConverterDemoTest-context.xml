<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
				              http://www.springframework.org/schema/context
				              http://www.springframework.org/schema/context/spring-context-3.0.xsd"							
              >

	 <bean id="primitivesConverter" class="com.jgk.springrecipes.converters.PrimitivesConverterDemo">
	   	<property name="shortAttrib" value="3"/>
	   	<property name="intAttrib" value="4"/>
	   	<property name="longAttrib" value="5"/>
	   	<property name="floatAttrib" value="6.34"/>
	   	<property name="doubleAttrib" value="5.43"/>
	   	<property name="booleanAttrib" value="true"/>
	   	<property name="charAttrib" value="a"/>
	   	<property name="byteAttrib" value="9"/>
	   	
	   	
	 </bean>

</beans>
